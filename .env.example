# Lighter Market Maker Configuration Example
# Copy this file to .env and fill in your actual values

# Required: API endpoint for the Lighter exchange
LIGHTER_API_URL=https://mainnet.zklighter.elliot.ai

# Required: Your private key for signing transactions
LIGHTER_PRIVATE_KEY=xxx

# Required: Your account index on the exchange
LIGHTER_ACCOUNT_INDEX=59279

# Required: Your API key index
LIGHTER_API_KEY_INDEX=12

# Optional: Path to signer library (if needed)
# LIGHTER_SIGNER_PATH=/path/to/signer/library

# Market Configuration
# Market ID to trade on (defaults to 1 if not specified)
LIGHTER_MM_MARKET_ID=0
# Alternative market ID variable (also supported)
# LIGHTER_MARKET_ID=1

# Order Size Configuration
# Base order size (defaults to 0.001)
LIGHTER_MM_BASE_SIZE=0.005

# Spread Configuration
# Base spread in basis points (defaults to 25)
LIGHTER_MM_SPREAD_BPS=6

# Level Configuration
# Number of levels to place orders at (defaults to 2)
LIGHTER_MM_LEVELS=2
# Spacing between levels in basis points (defaults to 15)
LIGHTER_MM_LEVEL_SPREAD_BPS=2
# Multiplier for order size at each level (defaults to 1.0)
LIGHTER_MM_LEVEL_SIZE_MULTIPLIER=1.0

# Inventory Management
# Soft limit where quoting skew begins (base units)
LIGHTER_MM_INV_SOFT_LIMIT=0.01
# Hard limit where inventory-adding orders pause
LIGHTER_MM_INV_HARD_LIMIT=0.02
# Spread skew strength at full soft limit (basis points)
LIGHTER_MM_INV_SKEW_BPS=40
# Maximum +/- size skew factor at full soft limit
LIGHTER_MM_INV_SIZE_SKEW=0.5

# Tolerance Configuration
# Price tolerance in basis points (defaults to 2)
LIGHTER_MM_TOLERANCE_BPS=2
# Quantity tolerance in ticks (defaults to 0)
LIGHTER_MM_QTY_TOLERANCE_TICKS=0

# Order Timing Configuration
# Order expiry in seconds (minimum 300, defaults to 360)
LIGHTER_MM_ORDER_EXPIRY_SECS=360
# Time after which orders are considered stale and should be cancelled (defaults to 45 seconds)
LIGHTER_MM_STALE_CANCEL_SECS=30

# Interval Configuration
# Account snapshot logging interval in seconds (defaults to 60)
LIGHTER_MM_ACCOUNT_LOG_SECS=30
# Active order sync interval in seconds (defaults to 10)
LIGHTER_MM_ACTIVE_SYNC_SECS=10
# Minimum time between quote updates in milliseconds (defaults to 250)
LIGHTER_MM_MIN_QUOTE_MS=1000

# Rate Limiting Configuration
# Maximum API requests per rate limit period (defaults to 5)
LIGHTER_MM_API_RATE_LIMIT=3
# Rate limit period in milliseconds (defaults to 1000)
LIGHTER_MM_API_RATE_PERIOD_MS=1000
# Maximum number of retries for failed requests (defaults to 3)
LIGHTER_MM_MAX_RETRIES=3
# Base delay for retries in milliseconds (defaults to 500)
LIGHTER_MM_RETRY_BASE_DELAY_MS=1000

# Order Type Configuration
# Whether to place post-only orders (defaults to true)
LIGHTER_MM_POST_ONLY=true

# Logging Configuration
# Default log level is "info", can be overridden with RUST_LOG
RUST_LOG=lighter_mm=debug
